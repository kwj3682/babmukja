	                   (select sum(order_sum) from tb_order where sell_mem_no = a.mem_no) 'totalSel'	                   	                   
	              from tb_member a) m, tb_grademap g ,tb_order o
		 where m.grade_no = g.grade_no
		   and mem_no = #{memNo}		  
