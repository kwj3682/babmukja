 	<select id="selectMemberByNo" parameterType="int" resultMap="MemberMap">
		select m.*, g.gradename
		  from tb_member m, tb_grademap g
		 where m.grade_no = g.grade_no
		   and mem_no = #{memNo}		  
	</select> 
	
</mapper>
